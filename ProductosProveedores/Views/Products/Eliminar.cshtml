@model Product
@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<div>
    <h3> Está usted seguro de querer eliminar el producto con el ID @Model.ID </h3>

    <form asp-controller="Home" asp-action="ManageProduct" method="post">
        <input type="hidden" value="@Model.ID" />

        <button class="btn btn-danger" type="submit" value="Eliminar"> Aceptar</button>
        <button class="btn btn-info" asp-controller="Home" asp-action="ManageProduct"> Volver </button>
    </form>
    
</div>


